{
  "name": "pin-keeper",
  "description": "Automatically manage and restore pinned tabs with flexible URL matching rules",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "lint": "run-p --continue-on-error --print-label lint:*",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check .",
    "format": "run-s --print-label format:*",
    "format:eslint": "eslint --fix",
    "format:prettier": "prettier --write .",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "test": "vitest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.4",
    "@tailwindcss/vite": "^4.0.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.483.0",
    "nanoid": "^5.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/chrome": "^0.0.310",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitest/eslint-plugin": "^1.1.43",
    "@webext-core/fake-browser": "^1.3.2",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.3",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "husky": "^9.1.7",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.2.2",
    "vitest": "^3.1.2",
    "wxt": "^0.19.29"
  },
  "packageManager": "pnpm@10.3.0+sha512.ee592eda8815a8a293c206bb0917c4bb0ff274c50def7cbc17be05ec641fc2d1b02490ce660061356bd0d126a4d7eb2ec8830e6959fb8a447571c631d5a2442d",
  "pnpm": {
    "onlyBuiltDependencies": [
      "dtrace-provider",
      "esbuild",
      "spawn-sync"
    ],
    "overrides": {
      "vite": "$vite"
    }
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,tx,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "!(*.{js,cjs,mjs,jsx,tx,tsx})": "prettier --write --ignore-unknown"
  }
}
